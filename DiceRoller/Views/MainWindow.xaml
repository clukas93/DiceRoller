<Window x:Class="DiceRoller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceRoller"
        DataContext="{StaticResource DiceRollerViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="800" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock  Name="DisplayBox" Margin="20,10,20,2" Grid.ColumnSpan="3" FontSize="72" TextAlignment="Center" VerticalAlignment="Center">#</TextBlock>
        <TextBlock  Name="LogBox" Margin="20,10,20,2" Grid.ColumnSpan="3" Grid.Row="1" FontSize="24" TextAlignment="Center" VerticalAlignment="Center">6 + 1 + 5</TextBlock>

        <Button Name="D100" Grid.Column="0" Grid.Row="2">100</Button>
        <Button Name="D20" Grid.Column="1" Grid.Row="2" Command="{Binding PressButtonCommand}" CommandParameter="20">20</Button>
        <Button Name="D12" Grid.Column="2" Grid.Row="2">12</Button>

        <Button Name="D10" Grid.Column="0" Grid.Row="3">10</Button>
        <Button Name="D8" Grid.Column="1" Grid.Row="3">8</Button>
        <Button Name="D6" Grid.Column="3" Grid.Row="3">6</Button>

        <Button Name="D4" Grid.Row="4" Grid.ColumnSpan="2" Margin="75,0,75,0">4</Button>
        <Button Name="D2" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Margin="75,0,75,0">2</Button>

        <ComboBox Name="RollMultiple" Grid.Column="0" Grid.Row="5"></ComboBox>
        <Button Name="Clear" Grid.Column="1" Grid.Row="5">Clear</Button>
        <Button Name="Log" Grid.Column="2" Grid.Row="5">Log</Button>

    </Grid>
</Window>
